@model FlightBookingSystem.Models.User

@{
    ViewBag.Title = "Login";
}

<style>
    .btn-lg {
        width: 100%;
    }
    .form-container {
        border: 2px solid #ccc;
        padding: 50px;
        background-color: #f2f2f2;
    }

</style>

<div style="display: flex; justify-content: center; align-items: center; height: 50vh;">
    <div style="max-width: 400px;"  class="form-container">


        <h2>Login</h2>
        <br />

        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()



            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Email ID")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div><br />


            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div><br />



            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary btn-lg" />
            </div><br />

        }

        <div>
            <span>No account yet? </span>@Html.ActionLink("Create new account", "Register")
        </div>


    </div>
</div>
