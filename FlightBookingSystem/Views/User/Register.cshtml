@model FlightBookingSystem.Models.User

@{
    ViewBag.Title = "Register";
}

<style>
    .form-control-wide {
        width: 300px;
    }
    .register-button {
        width: 100%;
    }
    .form-container {
        border: 2px solid #ccc;
        padding: 60px;
        background-color: #f2f2f2;
    }

</style>

<div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
    <div style="max-width: 400px;"  class="form-container">


        <h2>Create Account</h2><br />

        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, "First Name")
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-wide" })
            </div>
            <br />

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, "Last Name")
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-wide" })
            </div>
            <br />

            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Email ID")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-wide" })
            </div>
            <br />

            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-wide" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
            <br />

            <style>
                .error-message {
                    color: red;
                }
            </style>


            <div class="form-group">
                <label>Confirm Password</label>
                @Html.Password("ConfirmPassword", null, new { @class = "form-control form-control-wide" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary register-button" />
            </div>
            <br />
        }

        <div>
            @Html.ActionLink("Return to Homepage", "Index", "Home")
        </div>


    </div>
</div>


